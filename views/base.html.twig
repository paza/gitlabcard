<!doctype html>
<html>
<head>
    <meta charset="utf-8">

    <title>
        {% block title %}
            Gitlab Cardmaker
        {% endblock %}
    </title>

    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <style type="text/css">
        body {
            font-size: 22px;
            font-family: Helvetica, sans-serif;
            padding: 0px 20px;
        }
        header, article, footer {
            margin: 0 auto;
            width: 800px;
        }
        footer {
            padding-top: 50px;
            font-size: 14px;
            text-align: center;
        }
        h1 {
            font-size: 60px;
            clear: both;
            padding-top: 50px;
        }
        input, select {
            float: right;
            width: 400px;
            font-size: 22px;
            padding: 4px 8px;
        }
        label {
            float: left;
            width: 100%;
            border-bottom: 1px solid #CCC;
            display: block;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }
        .clear {
            clear: both;
        }
        .login {
            float: right;
        }
        a {
            color: #F00;
            text-decoration: none;
        }
        a:hover {
            color: #000;
        }
    </style>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    {% block head %}
    {% endblock %}
</head>

<body>

    <header>
        <div class="login">
            <a href="{{ path('logout') }}">logout</a>
            /
            <a href="{{ path('project') }}">select project</a>
        </div>
        <h1>Gitlab Cardmaker</h1>
    </header>

    <article>
        
        {% block content %}
        {% endblock %}
        
    </article>

    <footer class="clear">
        uses the <a href="http://cardmaker.patrickzahnd.ch">Cardmaker API</a> and the <a href="https://github.com/gitlabhq/gitlabhq/blob/master/doc/api/issues.md">Gitlab API</a>
    </footer>

</body>
</html>